@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Registration | Home Owner";
}


<section id="home owner">
    <div class="container">
        <div class="padding-100">
            <div class="box">
                <div class="row">
                    <div class="col-md-12">
                        <center><p class="font-30"><strong>Home Owner Registration</strong></p></center>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12">
                        <p><strong>Basic Information</strong></p>
                    </div>
                </div>

                <div class="row padding-10">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" id="firstname" class="form-control" placeholder="First Name" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" id="lastname" class="form-control" placeholder="Last Name" required>
                        </div>
                    </div>
                </div>

                <div class="row padding-10">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Account Name</label>
                            <input type="text" id="acctname" class="form-control" placeholder="Account Name" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Birth Date</label>
                            <input type="text" id="birthdate" class="form-control" placeholder="MM/DD/YYYY" required>
                        </div>
                    </div>
                </div>

                <div class="row padding-10">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email Address</label>
                            <input type="email" id="emailaddress" class="form-control" placeholder="Email Address" required>
                        </div>
                    </div>
                    <div class="col-md-6">

                    </div>
                </div>

                <div class="row padding-10">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" id="password" class="form-control" placeholder="Password" required>
                            <small><i>Password should be atleast 8 characters long, ontain uppercase and lowercase letters, numbers and special character</i></small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <input type="password" id="confirmpassword" class="form-control" placeholder="Confirm Password" required>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="row padding-10">
                   
                    <div class="col-md-2 pull-right">
                        <div class="form-group">
                            @Html.ActionLink("Next", "Index", "Home", null, new { @class = "btn btn-lg btn-primary btn-block" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
        
    </div>
</section>